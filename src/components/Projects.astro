---
const PROJECTS = [
    {
        title: 'Project',
        description: 'Project 1',
        link: '#',
        github: '#',
        image: 'https://astro.build/_astro/astro-cap.jt5HlOg8_12GvP4.webp',
        tags: ['HTML', 'CSS', 'JavaScript']
    }
]
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text-blue-300 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul>
                {tags.map(tag => (
                    <li>{tag}</li>
                ))}
            </ul>
            <img
            class="rounded shadow-2xl shadow-white/10"
            src={image}
            alt={`Screenshot del proyecto ${image}`} />
        </article>
    ))
}
 